{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "The unique identifier for the user."
        },
        "name": {
          "type": "string",
          "description": "The user's full name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user account was created."
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user account was last updated."
        }
      },
      "required": ["id", "name", "email", "createdAt", "updatedAt"]
    },
    "Account": {
      "title": "Account",
      "description": "Represents a financial account.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "The unique identifier for the account."
        },
        "name": {
          "type": "string",
          "description": "The name of the account."
        },
        "type": {
          "type": "string",
          "description": "The type of account (e.g., Checking, Savings)."
        },
        "balance": {
          "type": "number",
          "description": "The current balance of the account."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the account was created."
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the account was last updated."
        }
      },
      "required": ["id", "name", "type", "balance", "createdAt", "updatedAt"]
    },
    "Transaction": {
      "title": "Transaction",
      "description": "Represents a single financial transaction.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "The unique identifier for the transaction."
        },
        "type": {
          "type": "string",
          "enum": ["income", "expense"],
          "description": "The type of transaction."
        },
        "amount": {
          "type": "number",
          "description": "The amount of the transaction."
        },
        "description": {
          "type": "string",
          "description": "A description of the transaction."
        },
        "date": {
          "type": "string",
          "format": "date-time",
          "description": "The date and time of the transaction."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the transaction was recorded."
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the transaction was last updated."
        }
      },
      "required": ["id", "type", "amount", "date", "createdAt", "updatedAt"]
    },
    "Budget": {
      "title": "Budget",
      "description": "Represents a budget for a specific category.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "The unique identifier for the budget."
        },
        "amount": {
          "type": "number",
          "description": "The budgeted amount."
        },
        "period": {
          "type": "string",
          "enum": ["monthly", "yearly"],
          "description": "The budget period."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the budget was created."
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the budget was last updated."
        }
      },
      "required": ["id", "amount", "period", "createdAt", "updatedAt"]
    },
    "Category": {
      "title": "Category",
      "description": "Represents a category for transactions.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "The unique identifier for the category."
        },
        "name": {
          "type": "string",
          "description": "The name of the category."
        },
        "type": {
          "type": "string",
          "enum": ["income", "expense"],
          "description": "The type of category."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the category was created."
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the category was last updated."
        }
      },
      "required": ["id", "name", "type", "createdAt", "updatedAt"]
    },
    "Goal": {
      "title": "Goal",
      "description": "Represents a financial goal.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "The unique identifier for the goal."
        },
        "name": {
          "type": "string",
          "description": "The name of the goal."
        },
        "targetAmount": {
          "type": "number",
          "description": "The target amount for the goal."
        },
        "currentAmount": {
          "type": "number",
          "description": "The current amount saved towards the goal."
        },
        "targetDate": {
          "type": "string",
          "format": "date",
          "description": "The target date to achieve the goal."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the goal was created."
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the goal was last updated."
        }
      },
      "required": ["id", "name", "targetAmount", "currentAmount", "createdAt", "updatedAt"]
    }
  },
  "auth": {
    "providers": ["anonymous"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public profile information for each user."
    },
    "/users/{userId}/accounts/{accountId}": {
      "schema": {
        "$ref": "#/entities/Account"
      },
      "description": "Stores user's financial accounts."
    },
    "/users/{userId}/transactions/{transactionId}": {
      "schema": {
        "$ref": "#/entities/Transaction"
      },
      "description": "Stores user's financial transactions."
    },
    "/users/{userId}/categories/{categoryId}": {
      "schema": {
        "$ref": "#/entities/Category"
      },
      "description": "Stores user-defined categories for transactions."
    },
    "/users/{userId}/budgets/{budgetId}": {
      "schema": {
        "$ref": "#/entities/Budget"
      },
      "description": "Stores user's budgets for different categories."
    },
    "/users/{userId}/goals/{goalId}": {
      "schema": {
        "$ref": "#/entities/Goal"
      },
      "description": "Stores user's financial goals."
    }
  }
}
